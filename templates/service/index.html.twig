    font-size: 4.5rem;
    font-weight: 800;
    line-height: 1.1;
    color: #1A1A1A;
    margin-bottom: 2.5rem;
    letter-spacing: -0.02em;
}

.text-highlight {
    color: #FF5722;
    position: relative;
}

.services-hero__description {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    line-height: 1.7;
    color: #4B5563;
    margin-bottom: 4rem;
    max-width: 540px;
}

/* Stats */
.services-hero__stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
}

.stat-item {
    text-align: left;
}

.stat-item__value {
    font-family: 'Poppins', sans-serif;
    font-size: 3rem;
    font-weight: 800;
    color: #1A1A1A;
    line-height: 1;
    margin-bottom: 0.5rem;
}

.stat-item__label {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: #6B7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

/* Right Visual */
.services-hero__visual {
    position: relative;
    height: 600px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 2rem;
}

.visual-card {
    background: white;
    border-radius: 1.5rem;
    padding: 2.5rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: center;
    gap: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.visual-card:hover {
    transform: translateX(10px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.12);
}

.visual-card--primary {
    transform: translateX(0);
}

.visual-card--secondary {
    transform: translateX(3rem);
}

.visual-card--accent {
    transform: translateX(1.5rem);
}

.visual-card__icon {
    font-size: 3rem;
    line-height: 1;
}

.visual-card__text {
    font-family: 'Poppins', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #1A1A1A;
}

/* Services Section */
.services-section {
    padding: 8rem 2rem;
    background: white;
}

.services-section__container {
    max-width: 1400px;
    margin: 0 auto;
}

.services-section__header {
    text-align: center;
    margin-bottom: 6rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
}

.section-label {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #FF5722;
    margin-bottom: 1.5rem;
}

.section-title {
    font-family: 'Poppins', sans-serif;
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.2;
    color: #1A1A1A;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
