}

/* Responsive Design */
@media (max-width: 1024px) {
    .services-hero__container {
        grid-template-columns: 1fr;
        gap: 4rem;
    }

    .services-hero__content {
        padding-right: 0;
    }

    .services-hero__title {
        font-size: 3.5rem;
    }

    .section-title {
        font-size: 2.5rem;
    }

    .services-cta__title {
        font-size: 2.5rem;
    }
}

@media (max-width: 768px) {
    .services-hero {
        padding: 4rem 1.5rem;
    }

    .services-hero__title {
        font-size: 2.5rem;
    }

    .services-hero__stats {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .services-hero__visual {
        height: auto;
    }

    .visual-card--secondary,
    .visual-card--accent {
        transform: translateX(0);
    }

    .section-title {
        font-size: 2rem;
    }

    .services-grid-modern {
        grid-template-columns: 1fr;
    }

    .services-cta__title {
        font-size: 2rem;
    }
}
</style>
