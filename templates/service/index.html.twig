}

.service-card-modern__link:hover {
    gap: 1rem;
}

.service-card-modern__arrow {
    transition: transform 0.3s ease;
}

.service-card-modern__link:hover .service-card-modern__arrow {
    transform: translateX(4px);
}

.service-card-modern__badge {
    position: absolute;
    top: 2rem;
    right: 2rem;
