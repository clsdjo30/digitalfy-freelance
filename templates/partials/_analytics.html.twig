{# Google Analytics GA4 #}
{% if app.environment == 'prod' and app.request.server.get('GOOGLE_ANALYTICS_ID') %}
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id={{ app.request.server.get('GOOGLE_ANALYTICS_ID') }}"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', '{{ app.request.server.get('GOOGLE_ANALYTICS_ID') }}');
</script>
{% endif %}
