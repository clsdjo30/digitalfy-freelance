<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Digitalfy - Développeur Freelance Nîmes{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">

    {% block meta %}
        <meta name="description" content="{% block meta_description %}Développeur web & mobile freelance à Nîmes. Spécialisé Symfony, React Native, solutions digitales pour TPE/PME.{% endblock %}">
        <link rel="canonical" href="{{ app.request.uri }}">

        {# Open Graph Tags #}
        <meta property="og:title" content="{% block og_title %}{{ block('title') }}{% endblock %}">
        <meta property="og:description" content="{% block og_description %}{{ block('meta_description') }}{% endblock %}">
        <meta property="og:image" content="{% block og_image %}{{ absolute_url(asset('images/og-default.jpg')) }}{% endblock %}">
        <meta property="og:url" content="{{ app.request.uri }}">
        <meta property="og:type" content="{% block og_type %}website{% endblock %}">
        <meta property="og:locale" content="fr_FR">
        <meta property="og:site_name" content="Digitalfy">

        {# Twitter Cards #}
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="{% block twitter_title %}{{ block('title') }}{% endblock %}">
        <meta name="twitter:description" content="{% block twitter_description %}{{ block('meta_description') }}{% endblock %}">
        <meta name="twitter:image" content="{% block twitter_image %}{{ absolute_url(asset('images/og-default.jpg')) }}{% endblock %}">
    {% endblock %}

    {% block stylesheets %}
    {% endblock %}

    {# Données structurées Schema.org #}
    {% block structured_data %}{% endblock %}

    {# Google Analytics GA4 #}
    {% include 'partials/_analytics.html.twig' %}

    {% block head_scripts %}{% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>
    {% include 'partials/_navigation.html.twig' %}

    <div class="header-spacer"></div>

    <main class="main">
        {% block body %}{% endblock %}
    </main>

    {% include 'partials/_footer.html.twig' %}
</body>
</html>
