{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <h1 class="title">
        <i class="fa fa-dashboard"></i> Tableau de bord Digitalfy
    </h1>
{% endblock %}

{% block main %}
    <div class="dashboard-welcome">
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info">
                    <h4><i class="fa fa-info-circle"></i> Bienvenue sur votre backoffice</h4>
                    <p>Gérez votre contenu, vos projets et vos demandes de contact depuis cette interface.</p>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fa fa-file-text"></i> Articles de blog
                        </h5>
                        <p class="card-text display-4">
                            {# TODO: Afficher le nombre d'articles #}
                            <i class="fa fa-spinner fa-spin"></i>
                        </p>
                        <a href="{{ ea_url().setController('App\\Controller\\Admin\\BlogPostCrudController') }}"
                           class="btn btn-light btn-sm">
                            Gérer les articles
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fa fa-briefcase"></i> Projets
                        </h5>
                        <p class="card-text display-4">
                            {# TODO: Afficher le nombre de projets #}
                            <i class="fa fa-spinner fa-spin"></i>
                        </p>
                        <a href="{{ ea_url().setController('App\\Controller\\Admin\\ProjectCrudController') }}"
                           class="btn btn-light btn-sm">
                            Gérer les projets
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fa fa-envelope"></i> Demandes de contact
                        </h5>
                        <p class="card-text display-4">
                            {# TODO: Afficher le nombre de demandes #}
                            <i class="fa fa-spinner fa-spin"></i>
                        </p>
                        <a href="{{ ea_url().setController('App\\Controller\\Admin\\ContactRequestCrudController') }}"
                           class="btn btn-light btn-sm">
                            Voir les demandes
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fa fa-tags"></i> Catégories
                        </h5>
                        <p class="card-text display-4">
                            {# TODO: Afficher le nombre de catégories #}
                            <i class="fa fa-spinner fa-spin"></i>
                        </p>
                        <a href="{{ ea_url().setController('App\\Controller\\Admin\\CategoryCrudController') }}"
                           class="btn btn-light btn-sm">
                            Gérer les catégories
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fa fa-book"></i> Accès rapides</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <a href="{{ ea_url().setController('App\\Controller\\Admin\\BlogPostCrudController').setAction('new') }}"
                               class="list-group-item list-group-item-action">
                                <i class="fa fa-plus-circle text-success"></i> Créer un nouvel article de blog
                            </a>
                            <a href="{{ ea_url().setController('App\\Controller\\Admin\\ProjectCrudController').setAction('new') }}"
                               class="list-group-item list-group-item-action">
                                <i class="fa fa-plus-circle text-success"></i> Ajouter un nouveau projet
                            </a>
                            <a href="{{ ea_url().setController('App\\Controller\\Admin\\CategoryCrudController').setAction('new') }}"
                               class="list-group-item list-group-item-action">
                                <i class="fa fa-plus-circle text-success"></i> Créer une nouvelle catégorie
                            </a>
                            <a href="{{ path('app_home') }}"
                               class="list-group-item list-group-item-action"
                               target="_blank">
                                <i class="fa fa-eye text-primary"></i> Voir le site public
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
