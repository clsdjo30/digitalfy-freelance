{# Blog card component - used in blog list and related posts #}
<article class="blog-card">
    <a href="{{ path('blog_post', {slug: post.slug}) }}" class="blog-card-link">
        {% if post.featuredImage %}
            <div class="blog-card-image">
                <img src="{{ asset('uploads/blog/' ~ post.featuredImage) }}"
                     alt="{{ post.title }}"
                     loading="lazy">
            </div>
        {% endif %}

        <div class="blog-card-content">
            <div class="blog-card-meta">
                <span class="blog-card-category">
                    {{ post.category.name }}
                </span>
                <span class="blog-card-date">
                    {{ post.publishedAt|date('d/m/Y') }}
                </span>
            </div>

            <h3 class="blog-card-title">{{ post.title }}</h3>

            {% if post.excerpt %}
                <p class="blog-card-excerpt">{{ post.excerpt }}</p>
            {% endif %}

            <span class="blog-card-read-more">Lire l'article ’</span>
        </div>
    </a>
</article>
