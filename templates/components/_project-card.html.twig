{# Project card component - used in projects list #}
<article class="project-card">
    <a href="{{ path('app_project_show', {slug: project.slug}) }}" class="project-card-link">
        {% if project.thumbnail %}
            <div class="project-card-image">
                <img src="{{ asset('uploads/projects/' ~ project.thumbnail) }}"
                     alt="{{ project.title }}"
                     loading="lazy">
            </div>
        {% else %}
            <div class="project-card-image project-card-image-placeholder">
                <span class="placeholder-icon">=�</span>
            </div>
        {% endif %}

        <div class="project-card-content">
            <h3 class="project-card-title">{{ project.title }}</h3>

            {% if project.description %}
                <p class="project-card-description">{{ project.description }}</p>
            {% endif %}

            {% if project.technologies|length > 0 %}
                <div class="project-card-technologies">
                    {% for tech in project.technologies|slice(0, 3) %}
                        <span class="tech-tag">{{ tech }}</span>
                    {% endfor %}
                    {% if project.technologies|length > 3 %}
                        <span class="tech-tag tech-tag-more">+{{ project.technologies|length - 3 }}</span>
                    {% endif %}
                </div>
            {% endif %}

            <span class="project-card-link-text">Voir l'�tude de cas �</span>
        </div>
    </a>
</article>
