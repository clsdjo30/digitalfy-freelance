{# Project card component - used in projects list #}
<article class="project-card">
    {% if project.thumbnail %}
        <img src="{{ asset('uploads/projects/' ~ project.thumbnail) }}"
             alt="{{ project.title }}"
             class="project-card__image"
             loading="lazy">
    {% else %}
        <div class="project-card__image" style="display: flex; align-items: center; justify-content: center; font-size: 3rem;">
            ðŸ’¼
        </div>
    {% endif %}

    <h3 class="project-card__title">{{ project.title }}</h3>

    {% if project.description %}
        <p class="project-card__description">{{ project.description }}</p>
    {% endif %}

    {% if project.technologies|length > 0 %}
        <div class="project-card__technologies">
            {% for tech in project.technologies|slice(0, 3) %}
                <span class="project-card__tag">{{ tech }}</span>
            {% endfor %}
            {% if project.technologies|length > 3 %}
                <span class="project-card__tag">+{{ project.technologies|length - 3 }}</span>
            {% endif %}
        </div>
    {% endif %}

    <a href="{{ path('app_project_show', {slug: project.slug}) }}" class="project-card__link">
