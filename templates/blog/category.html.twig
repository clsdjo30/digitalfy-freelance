{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} – Articles Blog | Digitalfy{% endblock %}

{% block meta_description %}Découvrez tous les articles de la catégorie {{ category.name }} sur le blog Digitalfy. Conseils et actualités développement web et mobile.{% endblock %}

{% block body %}
<div class="blog-category-page">
    <section class="category-hero">
        <div class="container">
            <nav class="breadcrumb" aria-label="Fil d'Ariane">
                <a href="{{ path('home') }}">Accueil</a>
                <span class="breadcrumb-separator">/</span>
                <a href="{{ path('app_blog') }}">Blog</a>
                <span class="breadcrumb-separator">/</span>
                <span aria-current="page">{{ category.name }}</span>
            </nav>

            <h1>{{ category.name }}</h1>
            {% if category.description %}
                <p class="category-description">{{ category.description }}</p>
            {% endif %}
        </div>
    </section>

    <section class="category-content">
        <div class="container">
            {% if posts|length > 0 %}
                <div class="blog-grid">
                    {% for post in posts %}
                        {% include 'components/_blog-card.html.twig' with {post: post} %}
                    {% endfor %}
                </div>

                {# Pagination if needed #}
                {% if posts|length >= 12 %}
                    <nav class="pagination" aria-label="Pagination de la catégorie">
                        {% if currentPage > 1 %}
                            <a href="{{ path('app_blog_category', {slug: category.slug, page: currentPage - 1}) }}"
                               class="pagination-prev"
                               aria-label="Page précédente">
                                ← Précédent
                            </a>
                        {% endif %}

                        <a href="{{ path('app_blog_category', {slug: category.slug, page: currentPage + 1}) }}"
                           class="pagination-next"
                           aria-label="Page suivante">
                            Suivant →
                        </a>
                    </nav>
                {% endif %}
            {% else %}
                <div class="category-empty">
                    <p>Aucun article dans cette catégorie pour le moment.</p>
                    <a href="{{ path('app_blog') }}" class="btn btn-primary">Voir tous les articles</a>
                </div>
            {% endif %}
        </div>
    </section>
</div>
{% endblock %}
