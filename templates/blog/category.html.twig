{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} ‚Äì Blog | Digitalfy{% endblock %}

{% block meta_description %}Articles de blog sur {{ category.name|lower }}. D√©veloppement web et mobile √† N√Æmes.{% endblock %}

{% block body %}
<section class="section section--hero section--cream">
    <div class="container">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb__item">
                    <a href="{{ path('app_home') }}" class="breadcrumb__link">Accueil</a>
                </li>
                <li class="breadcrumb__item">
                    <a href="{{ path('app_blog') }}" class="breadcrumb__link">Blog</a>
                </li>
                <li class="breadcrumb__item">
                    <span class="breadcrumb__current">{{ category.name }}</span>
                </li>
            </ol>
        </nav>

        <h1 class="mb-4">{{ category.name }}</h1>
        {% if category.description %}
            <p class="text-lg text-gray">{{ category.description }}</p>
        {% endif %}
    </div>
</section>

<section class="section">
    <div class="container">
        {# Layout 2 colonnes : Articles + Sidebar #}
        <div style="display: grid; grid-template-columns: 1fr; gap: 2rem;">
            <div style="grid-column: 1 / -1;">
                {% if posts|length > 0 %}
                    <div style="display: grid; grid-template-columns: 1fr; gap: 2rem;">
                        {# Articles #}
                        <div style="order: 2;">
                            <div class="grid grid--2-cols">
                                {% for post in posts %}
                                    {% include 'components/_blog-card.html.twig' with {post: post} %}
                                {% endfor %}
                            </div>

                            {# Pagination #}
                            {% if totalPages > 1 %}
                                <nav class="pagination" aria-label="Pagination">
                                    <ul class="pagination__list">
                                        {% if currentPage > 1 %}
                                            <li class="pagination__item">
                                                <a href="{{ path('app_blog_category', {slug: category.slug, page: currentPage - 1}) }}"
                                                   class="pagination__link pagination__prev">
                                                    ‚Üê Pr√©c√©dent
                                                </a>
                                            </li>
                                        {% endif %}

                                        {% for page in 1..totalPages %}
                                            <li class="pagination__item">
                                                {% if page == currentPage %}
                                                    <span class="pagination__link pagination__link--active">{{ page }}</span>
                                                {% else %}
                                                    <a href="{{ path('app_blog_category', {slug: category.slug, page: page}) }}"
                                                       class="pagination__link">
                                                        {{ page }}
                                                    </a>
                                                {% endif %}
                                            </li>
                                        {% endfor %}

                                        {% if currentPage < totalPages %}
                                            <li class="pagination__item">
                                                <a href="{{ path('app_blog_category', {slug: category.slug, page: currentPage + 1}) }}"
                                                   class="pagination__link pagination__next">
                                                    Suivant ‚Üí
                                                </a>
                                            </li>
                                        {% endif %}
                                    </ul>
                                </nav>
                            {% endif %}
                        </div>

                        {# Sidebar #}
                        <aside style="order: 1;">
                            <div style="display: flex; flex-direction: column; gap: 1.5rem; position: sticky; top: 100px;">
                                {% include 'components/_blog-sidebar-categories.html.twig' with {categories: categories} %}
                                {% include 'components/_blog-sidebar-latest.html.twig' with {latestPosts: latestPosts} %}
                            </div>
                        </aside>
                    </div>
                {% else %}
                    <div class="card text-center">
                        <div style="font-size: 4rem; margin-bottom: 1rem;">üìù</div>
                        <h2 class="card__title">Aucun article dans cette cat√©gorie</h2>
                        <a href="{{ path('app_blog') }}" class="btn btn--primary mt-4">Voir tous les articles</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{# Responsive: Sidebar en haut sur mobile, √† droite sur desktop #}
<style>
@media (min-width: 1024px) {
    .section .container > div > div > div:first-child {
        grid-template-columns: 1fr 320px !important;
    }

    .section .container > div > div > div:first-child > div:first-child {
        order: 1 !important;
    }

    .section .container > div > div > div:first-child > aside {
        order: 2 !important;
    }
}

@media (max-width: 1023px) {
    .section .container > div > div > div:first-child {
        grid-template-columns: 1fr !important;
    }

    .section .container > div > div > div:first-child > aside {
        position: static !important;
    }
}
</style>
{% endblock %}
