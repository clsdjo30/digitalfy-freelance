{% extends 'base.html.twig' %}

{% block title %}Blog ‚Äì Actualit√©s d√©veloppement web & mobile | Digitalfy{% endblock %}

{% block meta_description %}Conseils, actualit√©s et astuces sur le d√©veloppement web Symfony et mobile React Native. Articles SEO pour TPE/PME √† N√Æmes et alentours.{% endblock %}

{% block body %}
<section class="section section--hero section--cream">
    <div class="container text-center">
        <h1 class="mb-4">Blog</h1>
        <p class="text-lg text-gray">Conseils, actualit√©s et astuces sur le d√©veloppement web et mobile</p>
    </div>
</section>

<section class="section">
    <div class="container">
        {# Layout 2 colonnes : Articles (gauche) + Sidebar (droite) #}
        <div style="display: grid; grid-template-columns: 1fr; gap: 2rem;">
            {# Colonne principale : Articles #}
            <div style="grid-column: 1 / -1;">
                {% if posts|length > 0 %}
                    <div style="display: grid; grid-template-columns: 1fr; gap: 2rem;">
                        {# Articles #}
                        <div style="order: 2;">
                            <div class="grid grid--2-cols">
                                {% for post in posts %}
                                    {% include 'components/_blog-card.html.twig' with {post: post} %}
                                {% endfor %}
                            </div>

                            {# Pagination #}
                            {% if totalPages > 1 %}
                                <nav class="pagination" aria-label="Pagination du blog">
                                    <ul class="pagination__list">
                                        {% if currentPage > 1 %}
                                            <li class="pagination__item">
                                                <a href="{{ path('app_blog', {page: currentPage - 1}) }}"
                                                   class="pagination__link pagination__prev"
                                                   aria-label="Page pr√©c√©dente">
                                                    ‚Üê Pr√©c√©dent
                                                </a>
                                            </li>
                                        {% endif %}

                                        {% for page in 1..totalPages %}
                                            <li class="pagination__item">
                                                {% if page == currentPage %}
                                                    <span class="pagination__link pagination__link--active" aria-current="page">{{ page }}</span>
                                                {% else %}
                                                    <a href="{{ path('app_blog', {page: page}) }}"
                                                       class="pagination__link"
                                                       aria-label="Page {{ page }}">
                                                        {{ page }}
                                                    </a>
                                                {% endif %}
                                            </li>
                                        {% endfor %}

                                        {% if currentPage < totalPages %}
                                            <li class="pagination__item">
                                                <a href="{{ path('app_blog', {page: currentPage + 1}) }}"
                                                   class="pagination__link pagination__next"
                                                   aria-label="Page suivante">
                                                    Suivant ‚Üí
                                                </a>
                                            </li>
                                        {% endif %}
                                    </ul>
                                </nav>
                            {% endif %}
                        </div>

                        {# Sidebar : Cat√©gories + Derniers articles #}
                        <aside style="order: 1;">
                            <div style="display: flex; flex-direction: column; gap: 1.5rem; position: sticky; top: 100px;">
                                {# Cat√©gories #}
                                {% include 'components/_blog-sidebar-categories.html.twig' with {categories: categories} %}

                                {# Derniers articles #}
                                {% include 'components/_blog-sidebar-latest.html.twig' with {latestPosts: latestPosts} %}
                            </div>
                        </aside>
                    </div>
                {% else %}
                    <div class="card text-center">
                        <div style="font-size: 4rem; margin-bottom: 1rem;">üìù</div>
                        <h2 class="card__title">Aucun article pour le moment</h2>
                        <p>Les articles arrivent bient√¥t !</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{# Responsive: Sidebar passe en haut sur mobile, articles en dessous sur desktop avec sidebar √† droite #}
<style>
@media (min-width: 1024px) {
    .section .container > div > div > div:first-child {
        grid-template-columns: 1fr 320px !important;
    }

    .section .container > div > div > div:first-child > div:first-child {
        order: 1 !important;
    }

    .section .container > div > div > div:first-child > aside {
        order: 2 !important;
    }
}

@media (max-width: 1023px) {
    .section .container > div > div > div:first-child {
        grid-template-columns: 1fr !important;
    }

    .section .container > div > div > div:first-child > aside {
        position: static !important;
    }
}
</style>
{% endblock %}
